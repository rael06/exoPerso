<Window x:Class="Client.Views.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.Views"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
		<Grid.RowDefinitions>
			
			<RowDefinition Height="50"></RowDefinition>
			<RowDefinition Height="*"></RowDefinition>
		</Grid.RowDefinitions>
		<StackPanel>
			<Button Height="50" Width="100" Click="Logout_Click" HorizontalAlignment="Left" >Log out</Button>
		</StackPanel>
		<StackPanel Grid.Row="1">
			<TextBlock Text="Students" HorizontalAlignment="Center" FontSize="20"></TextBlock>
			<ListView Height="300" Width="300" ItemsSource="{Binding Students}">
				<ListView.ItemTemplate>
					<DataTemplate>
						<WrapPanel>
							<TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding Name}" FontSize="20"/>
						</WrapPanel>
					</DataTemplate>
				</ListView.ItemTemplate>
			</ListView>
		</StackPanel>
	</Grid>
</Window>
